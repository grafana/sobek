{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "schedule:weekly"
  ],
  "packageRules": [
    {
      "description": "Enable gomod updates with common options",
      "matchManagers": [
        "gomod"
      ],
      "enabled": true,
      "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
      ]
    },
    {
      "description": "Do not update indirect dependencies",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": false
    },
    {
      "groupName": "ignored dependancies",
      "description": "dependancise that Sobek users should be updating",
      "enabled": false,
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "golang.org/x/text",
        "gopkg.in/yaml.v3",
        "github.com/google/pprof"
      ]
    }
  ]
}
